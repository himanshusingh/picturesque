.navbar navbar-default navbar-fixed-top{
	margin-bottom: 0px;
}

#app{
	width: 100%;
	max-width: 100%;
	margin: 0;
	padding: 0;
}
.share {
	height: 160px;
	color: white;
	background: rgba(0,0,0,0.6);
	border-radius: 8px;
	font-size: 80px;
	text-align: center;
	padding-top: 32px;
	margin: 50px 14% 20px 14%
}
.dudes {
text-align: center;
}

body{
	padding-top:0px;
	background-color: #F1F1F1
}
.dudes img{
	height: 193px;
	margin-top: 30px;
}
.index-template{
	background-image: url(<%= asset_path 'road-going-to-himalayas-blurred.jpg' %>);
	min-height: 900px;
	padding-top: 50px;
}
.container#albums{
	margin-top: 70px;
}
#albums h2{
	margin-top: 70px;
	margin-bottom: 35px;
	text-align: center;
}
#albumsView {
	height: 200px;
	overflow: auto;
	white-space: nowrap;
	padding: 21px;
	border: 1px solid #CACACA;
	border-radius: 10px;
}
#albumsView .thumbnail{
	padding: 0px;
	border: none;
	border-radius: 0px;
	max-height: 185px;
	max-width: 180px;
}
#albumsView li {
display: inline-block;
float: none;
margin-right: 50px;
}
#albumsView .thumbnail {
padding: 0px;
border-radius: 0px;
height: 135px;
max-width: 180px;
overflow: hidden;
border: 1px solid rgb(224, 212, 212);
box-shadow: 5px 5px 31px;
cursor: pointer;
}
#albumsView .thumbnail img {
margin: 0px;
}
#albumsView .album-name {
position: absolute;
bottom: 0px;
padding: 5px;
color: white;
width: 100%;
text-align: center;
background: rgba(0,0,0,0.6);
font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
font-size: 15px;
overflow: hidden;
}
#gallery {
padding: 0 20px 20px 20px;
}
#photosView {
padding: 40px 30px;
border: 1px solid #CACACA;
border-radius: 10px;
}
#photo-div {
max-width: 300px;
overflow: hidden;
margin-right: 40px;
margin-bottom: 40px;
max-height: 218px;
box-shadow: 5px 5px 14px black;
}
#photosView .photo-caption {
position: absolute;
bottom: 0px;
padding: 5px;
color: white;
width: 100%;
text-align: center;
background: rgba(0,0,0,0.6);
font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
font-size: 15px;
overflow: hidden;
padding: 10px 10px;
word-wrap: normal;
}
.upload-btn{
	clear: both;
	width: 200px;
}
#albumsView .icon-unchecked, #albumsView .icon-check{
	margin-top: 3px;
}
#photosView .icon-unchecked, #albumsView .icon-check, #photosView .icon-edit{
	margin-top: 3px;
}
#photosView .icon-edit:hover{
	color: rgb(66, 119, 168);
}
#photosView .icons{
	width: 40px;
	text-align:left;
}
#photosView .icon-edit{
	cursor: pointer;
}
#photosView .icons-right {
margin-right: 10px;
cursor: pointer;
}
#photosView #photos{
	float: left;
}
#albums h4, div.album-title h4{
	display: inline;
	margin-left: 10px;
	font-size: 20px;
}
#albums .icon-lightbulb, .icon-lightbulb{
	font-size: 20px;
}
.container.marker{
	margin-top: 70px;
}
div.spinner{
	
}
div.navbar-brand{
	color: white;
}